@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Entities.Models;
<h2>Ekle</h2>

<br />
<br />
<h2>Iletisim Ekle</h2>

    
<form method="post" action="/Iletisimler/Ekle" role="form">
<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Iletisim Ekle
                          </header>
                          <div class="panel-body">
                              <form role="form" class="form-horizontal tasi-form">
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Adresi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="Adresi" placeholder="" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Adress Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">TelefonNo</label>
                                      <div class="col-lg-10">
                                          <input type="tel" name="TelefonNo" placeholder="" id="l-name" class="form-control">
                                          <p class="help-block">Lutfen Telefon Numarasi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Posta Kodu</label>
                                      <div class="col-lg-10">
                                          <input type="number" name="PostaKodu" id="email2" class="form-control">
                                          <p class="help-block">Lutfen Posta Kodu Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Web Sitesi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="WebSitesi" id="email2" class="form-control">
                                          <p class="help-block">Lutfen Web Sitesi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <div class="col-lg-offset-2 col-lg-10">
                                          <button class="btn btn-danger" type="submit">Ekle</button>
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </section>
                  </div>
              </div>
</form>
@section scripts{
    <script src="../../Content/Admin/js/jquery.js"></script>
}




