@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


@using Entities.Models;
@model List<Kitablar>

<div class="box">
                <div class="container">
                    <div class="site-inside"><span>Hazirda Istifadeci Sayi: @ViewBag.Kullanici</span></div>
                    <div class="tesla-carousel" data-tesla-plugin="carousel" data-tesla-container=".tesla-carousel-items" data-tesla-item=">div" data-tesla-autoplay="false" data-tesla-rotate="false">
                        <div class="site-title">
                            
                            <ul class="wrapper-arrows">
                                <li><i class="icon-517 prev" title="left arrow"></i></li>
                                <li><i class="icon-501 next" title="right arrow"></i></li>
                            </ul>
                            <div class="site-inside"><span>Kitablar</span></div></div> 
                        <div class="row">
                            <div class="tesla-carousel-items">
                                @foreach (var k in Model)
                                {
                                    <div class="col-md-3 col-xs-6">
                                    <div class="product">
                                        <div class="product-cover">
                                            <div class="product-cover-hover"><span><a href="/Kitab/KitabDetay/@k.Id">Goster</a></span></div>
                                            <img src="@k.KitabResim" alt="product name" />
                                        </div>
                                        <div class="product-details">  
                                            <h1><a href="/Kitab/KitabDetay/@k.Id">@k.KitabAdi</a></h1>
                                            <p>@k.KitabAciklamasi</p>
                                            <div class="product-price">
                                                <a href="#" class="sepeteat" data-id="@k.Id"><i class="icon-257" title="add to cart"></i></a>
                                                
                                                @k.Fiyati
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                }
                                
                        </div>
                    </div>
                </div>
            </div>
    </div>

@section scripts{
    <script src="../../Content/Admin/js/jquery.js"></script>
    <script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
    <script type="text/javascript">
        $(".sepeteat").click(function () {
            var Id = $(this).data("id");
            $.ajax({
                url: "/Home/Sepet",
                type: "POST",
                data: { id: Id },
                success: function (veri) {
                },
                error:function myfunction() {
                      alert("Error")
            }
            })
        })

  </script>


