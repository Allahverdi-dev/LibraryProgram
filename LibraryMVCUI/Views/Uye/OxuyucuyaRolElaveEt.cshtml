@{
    ViewBag.Title = "OxuyucuyaRolElaveEt";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br /><br /><br />
<h2>OxuyucuyaRolElaveEt</h2>

<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              OxuyucuyaRolElaveEt
                          </header>
                          <div class="panel-body">
                              <form role="form" class="form-horizontal tasi-form" method="post" action="/Uye/OxuyucuyaRolElaveEt">
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Oxuyucu:</label>
                                      <div class="col-lg-10">
                                         <select class="form-control m-bot15" name="username">
                                              @foreach (MembershipUser mu in ViewBag.Okuyucu)
                                              {
                                                  <option value="@mu.UserName">@mu.UserName</option>
                                              }
                                          </select>
                                          <p class="help-block">Lutfen Oxuyucu Seciniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Rol:</label>
                                      <div class="col-lg-10">
                                         <select class="form-control m-bot15 ferdi" name="rol">
                                              @foreach (string r in ViewBag.Rol)
                                              {
                                                  <option value="@r">@r</option>
                                              }
                                          </select>
                                          <p class="help-block">Lutfen Rol Seciniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <div class="col-lg-offset-2 col-lg-10">
                                          <button class="btn btn-danger" type="submit">Ekle</button>
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </section>
                  </div>
              </div>