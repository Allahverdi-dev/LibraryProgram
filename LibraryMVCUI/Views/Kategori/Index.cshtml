@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Entities.Models
@model List<Kategoriler>
           @section head{
<link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
               }
           <br /><br /><br /><br /><br />
<section class="panel">
                  <header class="panel-heading">
                      Kategoriler Goster
                  </header>
                  <div class="panel-body">
                      <div class="adv-table editable-table ">
                          <div class="clearfix">
                              <div class="btn-group">
                                <a class="btn btn-shadow btn-success ekle" href="/Kategori/Ekle">Yeni Kategori&nbsp<i class="icon-plus"></i></a>
                              </div>
                          </div>
                          <br />
                          <br />
                          <br />
                          <div class="space15"></div>
                          <table class="table table-striped table-hover table-bordered" id="editable-sample">
                              <thead>
                              <tr>
                                  <th>Adi</th>
                                  <th>Aciklamasi</th>
                                  <th>Resmi</th>
                                  <th>Edit'le</th>
                              </tr>
                              </thead>
                              <tbody>
                                  @foreach (Kategoriler k in Model)
                                  {
                                  <tr class="">
                                     <td>@k.KategoriAdi</td>
                                      <td>@k.KategoriAciklamasi</td>
                                     <td><a class="fancybox" href="@k.KategoriResim"><i class="icon-eye-open"></i></a></td>
                                     <td><a class="btn btn-shadow btn-success" href="/Kategori/Duzenle/@k.Id">Edit'le</a></td>
                                  </tr>
                                  }
                              
                              </tbody>
                          </table>
                      </div>
                  </div>
              </section>

@section scripts{
    <script src="../../Content/Admin/js/jquery.js"></script>
    <script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
    <script type="text/javascript">
        $(function () {
            //    fancybox
            jQuery(".fancybox").fancybox();
        });
        $(".sil").click(function () {
            var Id = $(this).data("id");

            $.ajax({
                url: "/Kategori/Sil",
                type: "POST",
                data: { id: Id },
                success: function (veri) {
                    alert(veri + " Silindi");
                }
            })
        })

  </script>
}