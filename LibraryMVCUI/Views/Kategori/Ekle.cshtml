@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /><br /><br /><br />
<form method="post" action="/Kategori/Ekle" role="form" enctype="multipart/form-data">
<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Kategori Ekle
                          </header>
                          <div class="panel-body">
                              <form role="form" class="form-horizontal tasi-form">
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Adi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="KategoriAdi" placeholder="" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Kategori Adi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Aciklamasi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="KategoriAciklamasi" placeholder="" id="l-name" class="form-control">
                                          <p class="help-block">Lutfen Aciklama Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                          <label class="control-label col-md-3">Resim:</label>
                                          <div class="controls col-md-9">
                                              <div class="fileupload fileupload-new" data-provides="fileupload">
                                                <span class="btn btn-white btn-file">
                                                <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Sec</span>
                                                <input type="file" class="default" name="FileUp" />
                                                </span>
                                              </div>
                                          </div>
                                      </div>
                                  <div class="form-group">
                                      <div class="col-lg-offset-2 col-lg-10">
                                          <button class="btn btn-danger" type="submit">Ekle</button>
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </section>
                  </div>
              </div>
</form>
