@{
    ViewBag.Title = "KitabDetay";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@using Entities.Models;
@model Kitablar

  <div class="content">
            <div class="product-one">
                <div class="container">
                    <h2>Kitab Detay</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="the-slider product-big-image" data-tesla-plugin="slider" data-tesla-item=".slide" data-tesla-next=".product-image-arrows-right" data-tesla-prev=".product-image-arrows-left" data-tesla-container=".slide-wrapper">
                                <ul class="slide-wrapper">
                                    <li class="slide"><img src="@Model.KitabResim" alt="@Model.KitabAdi" /></li>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h2>@Model.KitabAdi</h2>
                            <div class="product-rate">
                                <i class="icon-423" title="full"></i>
                                <i class="icon-423" title="full"></i>
                                <i class="icon-423" title="full"></i>
                                <i class="icon-423" title="full"></i>
                                <i class="icon-421" title="empty"></i>
                            </div>
                            <div class="clear"></div>
                            <div class="quantity">
                                <span>@Model.Miktar</span>
                            </div>
                            <hr/>
                            <div class="row">
                                <div class="col-md-6">
                                    <div style="font-style:oblique"><b>Qiymet : <span>@Model.Fiyati AZN</span></b></div>
                                </div>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#description" data-toggle="tab">Aciklama</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="description">
                                    <p>@Model.KitabAciklamasi</p>
                                    <ul class="social-share">
                                        <li><span>Share</span></li>
                                        <li><a href="#"><i class="icon-160" title="161"></i></a></li>
                                        <li><a href="#"><i class="icon-138" title="161"></i></a></li>
                                        <li><a href="#"><i class="icon-106" title="161"></i></a></li>
                                        <li><a href="#"><i class="icon-169" title="161"></i></a></li>
                                        <li><a href="#"><i class="icon-163" title="161"></i></a></li>
                                    </ul>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>