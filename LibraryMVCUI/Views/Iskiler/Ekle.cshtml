@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Entities.Models;
@section head{
    <link rel="stylesheet" type="text/css" href="assets/bootstrap-datepicker/css/datepicker.css" />
    <link rel="stylesheet" type="text/css" href="assets/bootstrap-timepicker/compiled/timepicker.css" />
    <link rel="stylesheet" type="text/css" href="assets/bootstrap-daterangepicker/daterangepicker-bs3.css" />
    <link rel="stylesheet" type="text/css" href="assets/bootstrap-datetimepicker/css/datetimepicker.css" />
    <link rel="stylesheet" type="text/css" href="assets/bootstrap-datepicker/css/datepicker.css" />
}
<br />
<br /><br />
<br />
<form method="post" action="/Iskiler/Ekle" role="form" enctype="multipart/form-data">
<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Iski Ekle
                          </header>
                          <div class="panel-body">
                              <form role="form" class="form-horizontal tasi-form">
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Adi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="IsciAdi" placeholder="" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Iscinin Adi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Soyadi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="Soyadi" placeholder="" id="l-name" class="form-control">
                                          <p class="help-block">Lutfen Soyadi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Maas</label>
                                      <div class="col-lg-10">
                                          <input type="number" name="Maas" id="email2" class="form-control">
                                          <p class="help-block">Lutfen Maas Ekleyiniz</p>
                                      </div>
                                  </div>
                                 <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Dogum Tarihi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="Dogum" id="email2" class="form-control">
                                          <p class="help-block">Lutfen Dogum Tarihi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Yeni Iletisim</label>
                                      <div class="col-lg-10">
                                               <a class="btn btn-shadow btn-success ekle" href="/Iletisimler/Ekle">Yeni Iletisime Gerek Varmi?&nbsp<i class="icon-plus"></i></a>
                                               <p class="help-block">Yeni Iletisime Gerek Varmi?</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Iletisimi:</label>
                                      <div class="col-lg-10">
                                         <select class="form-control m-bot15" name="IletisimID">
                                              @foreach (Iletisimler il in ViewBag.Iletisim)
                                              {
                                                  <option value="@il.Id">@il.Adresi</option>
                                              }
                                          </select>
                                          <p class="help-block">Lutfen Iletisim Seciniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                          <label class="control-label col-md-3">Isci Resim:</label>
                                          <div class="controls col-md-9">
                                              <div class="fileupload fileupload-new" data-provides="fileupload">
                                                <span class="btn btn-white btn-file">
                                                <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Sec</span>
                                                <input type="file" class="default" name="FileUp" />
                                                </span>
                                              </div>
                                          </div>
                                      </div>
                                  <div class="form-group">
                                      <div class="col-lg-offset-2 col-lg-10">
                                          <button class="btn btn-danger" type="submit">Ekle</button>
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </section>
                  </div>
              </div>
</form>
@section scripts{
    
  <script type="text/javascript" src="assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
  <script type="text/javascript" src="assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
  <script type="text/javascript" src="assets/bootstrap-daterangepicker/moment.min.js"></script>
  <script type="text/javascript" src="assets/bootstrap-daterangepicker/daterangepicker.js"></script>
  <script type="text/javascript" src="assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>
    <script src="../../Content/Admin/js/jquery.js"></script>
      <script type="text/javascript" src="assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
}



