@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Entities.Models.Yazarlar
@using Entities.Models

<br /><br /><br /><br />
<form method="post" action="/Yazarlar/Duzenle" role="form" enctype="multipart/form-data">
<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Duzenle
                          </header>
                          <div class="panel-body">
                              <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Adi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="YazarAdi" placeholder="@Model.YazarAdi" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Yazar Adi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Soyadi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="YazarSoyAdi" placeholder="@Model.YazarSoyAdi" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Yazar SoyAdi Ekleyiniz</p>
                                      </div>
                                  </div>
                              <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Hakkinda</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="Haqqinda" placeholder="@Model.Haqqinda" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Yazar Hakkinda Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Iletisimi:</label>
                                      <div class="col-lg-10">
                                         <select class="form-control m-bot15" name="IletisimID">
                                              @foreach (Entities.Models.Iletisimler i in ViewBag.Iletisim)
                                              {
                                                  <option value="@i.Id" selected="@Model.IletisimID">@i.Adresi</option>
                                              }
                                          </select>
                                          <p class="help-block">Lutfen Iletisim Seciniz</p>
                                      </div>
                                  </div>
                              <input type="hidden" value="@Model.Id" name="Id"/>
                                  <div class="form-group">
                                          <label class="control-label col-md-3">Yazici Resim:</label>
                                          <div class="controls col-md-9">
                                              <div class="fileupload fileupload-new" data-provides="fileupload">
                                                <span class="btn btn-white btn-file">
                                                <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Sec</span>
                                                <input type="file" class="default" name="Resim" />
                                                </span>
                                              </div>
                                          </div>
                                      </div>
                                  <div class="form-group">
                                      <div class="col-lg-offset-2 col-lg-10">
                                          <button class="btn btn-danger" type="submit">Duzenle</button>
                                      </div>
                                  </div>
                          </div>
                      </section>
                  </div>
              </div>
</form>

