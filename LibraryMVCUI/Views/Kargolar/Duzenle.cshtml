@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Entities.Models.Kargolar

<h2>Duzenle</h2>
<form method="post" action="/Kargolar/Duzenle" role="form">
<div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                             Kargo Duzenle
                          </header>
                          <div class="panel-body">
                              <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Adi</label>
                                      <div class="col-lg-10">
                                          <input type="text" name="KitabAdi" placeholder="@Model.KargoAd" id="f-name" class="form-control">
                                          <p class="help-block">Lutfen Kargo Adi Ekleyiniz</p>
                                      </div>
                                  </div>
                                  <div class="form-group has-success">
                                      <label class="col-lg-2 control-label">Iletisimi:</label>
                                      <div class="col-lg-10">
                                         <select class="form-control m-bot15" name="IletisimID">
                                              @foreach (Entities.Models.Iletisimler i in ViewBag.Iletisim)
                                              {
                                                  <option value="@i.Id" selected="@Model.IletisimID">@i.Adresi</option>
                                              }
                                          </select>
                                          <p class="help-block">Lutfen Iletisim Seciniz</p>
                                      </div>
                                  </div>
                              <input type="hidden" value="@Model.Id" name="Id"/>
                                  <div class="form-group">
                                      <div class="col-lg-offset-2 col-lg-10">
                                          <button class="btn btn-danger" type="submit">Duzenle</button>
                                      </div>
                                  </div>
                          </div>
                      </section>
                  </div>
              </div>
</form>